<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="answerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/answerText</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/answerText</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:color">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="finishStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:color">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="buttonStyleMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

</resources>
